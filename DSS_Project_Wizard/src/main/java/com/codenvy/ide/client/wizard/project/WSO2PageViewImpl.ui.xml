<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:DockLayoutPanel unit="PX">
        <g:north size="25">
            <g:Label text="Service Name:"/>
        </g:north>
        <g:north size="25">
            <g:TextBox ui:field='fileName'></g:TextBox>
        </g:north>
        <g:north size="25">
            <g:Label text="Service Namespace:"/>
        </g:north>
         <g:north size="25">
            <g:TextBox ui:field='serviceNamespace'></g:TextBox>
        </g:north>
        <g:north size="25">
            <g:Label text="Service Group:"/>
        </g:north>
         <g:north size="25">
            <g:TextBox ui:field='serviceGroup'></g:TextBox>
        </g:north>
        <g:north size="25">
            <g:Label text="Description:"/>
        </g:north>
         <g:north size="25">
            <g:TextBox ui:field='description'></g:TextBox>
        </g:north>
        <g:north size="25">
            <g:Label text="Data Source ID:"/>
        </g:north>
        <g:north size="25">
            <g:TextBox ui:field='id'></g:TextBox>
        </g:north>
        <g:north size="25">
            <g:Label text="Data Source Type:"/>
        </g:north>
         <g:north size="25">
            <g:TextBox ui:field='type'></g:TextBox>
        </g:north>
        <g:north size="25">
            <g:Label text="Database Engine:"/>
        </g:north>
         <g:north size="25">
            <g:TextBox ui:field='engine'></g:TextBox>
        </g:north>
        <g:north size="25">
            <g:Label text="Driver Class:"/>
        </g:north>
         <g:north size="25">
            <g:TextBox ui:field='driverClass'></g:TextBox>
        </g:north>
          <g:north size="25">
            <g:Label text="JDBC URL:"/>
        </g:north>
         <g:north size="25">
            <g:TextBox ui:field='url'></g:TextBox>
        </g:north>
          <g:north size="25">
            <g:Label text="Username:"/>
        </g:north>
         <g:north size="25">
            <g:TextBox ui:field='uname'></g:TextBox>
        </g:north>
            <g:north size="25">
            <g:Label text="Password:"/>
        </g:north>
         <g:north size="25">
            <g:TextBox ui:field='pass'></g:TextBox>
        </g:north>
    </g:DockLayoutPanel>

</ui:UiBinder>