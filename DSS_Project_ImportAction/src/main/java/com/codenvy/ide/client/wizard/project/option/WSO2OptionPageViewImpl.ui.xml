<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
             
        <ui:style>
        .optionMargin {
            position: absolute;
            line-height: 30px;
            margin-left: 25px;

        }
        .spaceRight {
            margin-right: 30px;
        }
        
       
    </ui:style>

    <g:DockLayoutPanel unit="PX" debugId="dssProject">
    
       <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:center>
                    <g:SimplePanel addStyleNames="{style.spaceRight}">
                        <g:SimplePanel>
                        <g:RadioButton ui:field="page2" name="page" text="Create a new Project" width="400px" height="22px" debugId="dssProject"/>
                        </g:SimplePanel>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
       <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:center>
                    <g:SimplePanel addStyleNames="{style.spaceRight}">
                        <g:SimplePanel>
                        <g:RadioButton ui:field="page3" name="page" text="Import a Project" width="400px" height="22px" debugId="dssProject"/>
                        </g:SimplePanel>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        
    </g:DockLayoutPanel>

</ui:UiBinder>